@model OnovaStore.Helpers.PaginatedList<OnovaStore.Areas.Manage.Data.GetPromotionForStaff>
@{
    ViewData["Title"] = "List of Promotion";
    Layout = "_Layout";
}

<div class="g-pa-20">
<h3 class="g-font-weight-300 g-font-size-22 g-color-black g-mb-30">
    <a style="text-decoration: none" href="@Url.Action("AddPromotion", "Manager", new {Area = "Manage"})">Add new promotion code</a>
</h3>

<div class="media-md align-items-center g-mb-30">
    <div class="d-flex g-mb-15 g-mb-0--md">
        <h3 class="g-font-weight-400 g-font-size-16 g-color-black mb-0">Promotions</h3>
    </div>
    <div class="media d-md-flex align-items-center ml-auto">
        <form asp-action="Promotions" method="get">
            <div class="d-flex g-ml-15 g-ml-55--md">
                <div class="input-group g-pos-rel g-width-320--md">

                    <input class="form-control g-font-size-default g-brd-gray-light-v7 g-brd-lightblue-v3--focus g-rounded-20 g-pl-20 g-pr-50 g-py-10" type="text" placeholder="Search for promotion code" value="@ViewData["CurrentFilter"]" name="SearchString">
                    <button class="btn g-pos-abs g-top-0 g-right-0 g-z-index-2 g-width-60 h-100 g-bg-transparent g-font-size-16 g-color-lightred-v2 g-color-lightblue-v3--hover rounded-0" type="submit">
                        <i class="hs-admin-search g-absolute-centered"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="g-mb-40">
    <div class="table-responsive">
        <table class="table u-table--v3 u-editable-table--v1 g-color-black">
            <thead>
            <tr>
                <th>
                    <div class="media">
                        <div class="d-flex align-self-center">Id</div>
                        <div class="d-flex align-self-center ml-auto">
                            <span class="d-inline-block g-width-10 g-line-height-1 g-font-size-10">
                                <a class="g-color-gray-light-v6 g-color-lightblue-v3--hover g-text-underline--none--hover" style="@(ViewData["SortOrder"].ToString() == "id" ? "color: #007bff !important;" : "")" asp-action="Promotions" asp-route-sortOrder="id" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                    <i class="hs-admin-angle-up"></i>
                                </a>
                                <a class="g-color-gray-light-v6 g-color-lightblue-v3--hover g-text-underline--none--hover" style="@(ViewData["SortOrder"].ToString() == "id_desc" ? "color: #007bff !important;" : "")" asp-action="Promotions" asp-route-sortOrder="id_desc" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                    <i class="hs-admin-angle-down"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </th>
                <th>
                    <div class="media">
                        <div class="d-flex align-self-center">Promotion Code</div>
                        <div class="d-flex align-self-center ml-auto">
                            <span class="d-inline-block g-width-10 g-line-height-1 g-font-size-10">
                                <a class="g-color-gray-light-v6 g-color-lightblue-v3--hover g-text-underline--none--hover" style="@(ViewData["SortOrder"].ToString() == "code" ? "color: #007bff !important;" : "")" asp-action="Promotions" asp-route-sortOrder="code" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                    <i class="hs-admin-angle-up"></i>
                                </a>
                                <a class="g-color-gray-light-v6 g-color-lightblue-v3--hover g-text-underline--none--hover" style="@(ViewData["SortOrder"].ToString() == "code_desc" ? "color: #007bff !important;" : "")" asp-action="Promotions" asp-route-sortOrder="code_desc" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                    <i class="hs-admin-angle-down"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </th>
                <th>
                    <div class="media">
                        <div class="d-flex align-self-center">End Date</div>
                        <div class="d-flex align-self-center ml-auto">
                            <span class="d-inline-block g-width-10 g-line-height-1 g-font-size-10">
                                <a class="g-color-gray-light-v6 g-color-lightblue-v3--hover g-text-underline--none--hover" style="@(ViewData["SortOrder"].ToString() == "targetapply" ? "color: #007bff !important;" : "")" asp-action="Promotions" asp-route-sortOrder="targetapply" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                    <i class="hs-admin-angle-up"></i>
                                </a>
                                <a class="g-color-gray-light-v6 g-color-lightblue-v3--hover g-text-underline--none--hover" style="@(ViewData["SortOrder"].ToString() == "targetapply_desc" ? "color: #007bff !important;" : "")" asp-action="Promotions" asp-route-sortOrder="targetapply_desc" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                    <i class="hs-admin-angle-down"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </th>
                <th>
                    <div class="media">
                        <div class="d-flex align-self-center">Discount</div>
                        <div class="d-flex align-self-center ml-auto">
                            <span class="d-inline-block g-width-10 g-line-height-1 g-font-size-10">
                                <a class="g-color-gray-light-v6 g-color-lightblue-v3--hover g-text-underline--none--hover" style="@(ViewData["SortOrder"].ToString() == "discount" ? "color: #007bff !important;" : "")" asp-action="Promotions" asp-route-sortOrder="discount" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                    <i class="hs-admin-angle-up"></i>
                                </a>
                                <a class="g-color-gray-light-v6 g-color-lightblue-v3--hover g-text-underline--none--hover" style="@(ViewData["SortOrder"].ToString() == "discount_desc" ? "color: #007bff !important;" : "")" asp-action="Promotions" asp-route-sortOrder="discount_desc" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                    <i class="hs-admin-angle-down"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </th>
                <th>
                    <div class="media">
                        <div class="d-flex align-self-center">Status</div>
                        <div class="d-flex align-self-center ml-auto">
                            <span class="d-inline-block g-width-10 g-line-height-1 g-font-size-10">
                                <a class="g-color-gray-light-v6 g-color-lightblue-v3--hover g-text-underline--none--hover" style="@(ViewData["SortOrder"].ToString() == "status" ? "color: #007bff !important;" : "")" asp-action="Promotions" asp-route-sortOrder="status" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                    <i class="hs-admin-angle-up"></i>
                                </a>
                                <a class="g-color-gray-light-v6 g-color-lightblue-v3--hover g-text-underline--none--hover" style="@(ViewData["SortOrder"].ToString() == "status_desc" ? "color: #007bff !important;" : "")" asp-action="Promotions" asp-route-sortOrder="status_desc" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                    <i class="hs-admin-angle-down"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @if (Model.Count > 0)
            {
                var AvailableCss = "g-brd-teal-v2 g-bg-teal-v2";
                var ExpiredCss = "g-brd-around g-brd-primary";
                var FutureCss = "g-brd-lightbrown g-bg-lightbrown";
                var defaultCss = "g-brd-bluegray g-bg-bluegray";
                string cssRendered = "";
                var i = 0;
                foreach (var promotion in Model)
                {
                    <tr>
                        <td>@promotion.PromotionId</td>
                        <td>@promotion.PromotionCode</td>
                        <td>@promotion.TargetApply</td>
                        <td>@promotion.Discount</td>
                        <td>
                            @switch (promotion.Status)
                            {
                                case "Available":
                                    cssRendered = AvailableCss;
                                    break;

                                case "Expired":
                                    cssRendered = ExpiredCss;
                                    break;

                                case "Future":
                                    cssRendered = FutureCss;
                                    break;
                                default:
                                    cssRendered = defaultCss;
                                    break;
                            }
                            <span class="u-tags-v1 text-center g-width-110 g-brd-around @cssRendered g-font-weight-400 g-color-white g-rounded-50 g-py-4 g-px-15">
                                @promotion.Status
                            </span>
                        </td>
                        <td class="text-right">
                            <div class="g-pos-rel g-top-3 d-inline-block">
                                <a id="@("dropDown" + i + "Invoker")" class="u-link-v5 g-line-height-0 g-font-size-24 g-color-gray-light-v6 g-color-lightblue-v3--hover" href="#!" aria-controls="@("dropDown" + @i)" aria-haspopup="true" aria-expanded="false" data-dropdown-event="click" data-dropdown-target="@("#dropDown" + @i)">
                                    <i class="hs-admin-more-alt"></i>
                                </a>
                                <div id="@("dropDown" + @i)" class="u-shadow-v31 g-pos-abs g-right-0 g-z-index-2 g-bg-white" aria-labelledby="@("dropDown" + i + "Invoker")">
                                    <ul class="list-unstyled g-nowrap mb-0">
                                        <li>
                                            <a class="d-flex align-items-center u-link-v5 g-bg-gray-light-v8--hover g-font-size-12 g-font-size-default--md g-color-gray-dark-v6 g-px-25 g-py-14" asp-action="EditPromotion" asp-route-id="@promotion.PromotionId">
                                                <i class="hs-admin-pencil g-font-size-18 g-color-gray-light-v6 g-mr-10 g-mr-15--md"></i>
                                                Edit
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                    i++;
                }
            }
            </tbody>
        </table>
    </div>
</div>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    var length = (int) ViewData["LengthEntry"];
    var currentEntry = (int) ViewData["CurrentEntry"];
}
<div class="media align-items-center g-mb-45">
    <div class="media-body">Showing @(length < Model.PageSize ? length : currentEntry) of @length entries</div>
    <nav id="" class="d-flex ml-auto" aria-label="Page Navigation">
        <ul class="list-inline text-right mb-0">
            <li class="list-inline-item">
                <a asp-action="Promotions" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-page="@(Model.PageIndex - 1)" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="u-pagination-v1__item u-pagination-v1-2 g-brd-gray-light-v7 g-brd-lightblue-v3--hover g-rounded-4 g-py-8 g-px-12 @prevDisabled" aria-label="Previous">
                    <span class="g-line-height-1 g-valign-middle" aria-hidden="true">
                        <i class="hs-admin-angle-left"></i>
                    </span><span class="sr-only">Prev</span>
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="list-inline-item g-hidden-sm-down">
                    <a asp-action="Promotions" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-page="@i" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="u-pagination-v1__item u-pagination-v1-2 g-bg-lightblue-v3--active g-color-white--active g-brd-gray-light-v7 g-brd-lightblue-v3--hover g-brd-lightblue-v3--active g-rounded-4 g-py-8 g-px-15 @(i == Model.PageIndex ? "active" : "")">
                        @i
                    </a>
                </li>
            }

            <li class="list-inline-item">
                <a asp-action="Promotions" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-page="@(Model.PageIndex + 1)" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="u-pagination-v1__item u-pagination-v1-2 g-brd-gray-light-v7 g-brd-lightblue-v3--hover g-rounded-4 g-py-8 g-px-12 @nextDisabled" aria-label="Next">
                    <span class="g-line-height-1 g-valign-middle" aria-hidden="true">
                        <i class="hs-admin-angle-right"></i>
                    </span><span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
</div>

@section Styles {
    <style type="text/css">
        a.disabled {
            pointer-events: none;
            cursor: default;
        }
    </style>
}