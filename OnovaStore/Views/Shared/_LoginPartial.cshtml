                <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" hidden></form>
                <a class="d-block g-color-text g-color-primary--hover g-text-underline--none--hover g-font-weight-400 g-py-5 g-px-20" href="javascript:document.getElementById('logoutForm').submit()">
